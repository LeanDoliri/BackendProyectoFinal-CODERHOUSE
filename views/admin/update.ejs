<%- include('templetes/head', {tituloWeb:'Update'}) %>

    <body>
        <div class="container my-3">
            <div class="jumbotron">
                <header>
                    <%- include('templetes/navbar') %>
                </header>
                <div class="containger-fluid alert-primary mt-3 mb-3">
                    <div class="p-3">
                        <h1>Actualizar Producto</h1>
                    </div>
                    <form class="form mx-3" action="<%= product._id %>" method="post"
                        role="form" autocomplete="off">
                        <div>
                            <label for="product">Producto</label>
                            <input id="product" class="form-control" type="text" name="product" required
                                value="<%= product.product %>" />
                            <br />
                            <label for="category">Categoría</label>
                            <input id="category" class="form-control" type="text" name="category" required
                                value="<%= product.category %>" />
                            <br />
                            <label for="price">Precio</label>
                            <input id="price" class="form-control" type="number" name="price" required
                                value="<%= product.price %>" />
                            <br />
                            <label for="description">Descripción</label>
                            <input id="description" class="form-control" type="text" name="description" required
                                value="<%= product.description %>" />
                            <br />
                            <label for="thumbnail">Imágen</label>
                            <input id="thumbnail" class="form-control" type="text" name="thumbnail" required
                                value="<%= product.thumbnail %>" />
                        </div>
                        <input class="btn btn-success my-3" type="submit" value="Actualizar" />
                    </form>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
            integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
            integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
            crossorigin="anonymous"></script>
    </body>

    </html>